<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_main_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.75"
                android:background="@drawable/white_arrow" />

            <TextView
                android:id="@+id/message_bubble"
                android:layout_width="326dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="Cheems"
                android:textColor="#FFFFFF" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shapeableImageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/search_icon_mino"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@drawable/search_icon_mino">

                </com.google.android.material.imageview.ShapeableImageView>

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Cheems"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/shapeableImageView2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/msg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="View profile"
                    android:textColor="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/shapeableImageView2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/cheems_msg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0" />
        </FrameLayout>
        <!-- List of Settings -->
        <LinearLayout
            android:id="@+id/settingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!--Setting -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Setting"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <!-- Account Management -->
            <TextView
                android:id="@+id/accountManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Account management"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="start|center_vertical"
                android:drawablePadding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <!-- Profile Visibility -->
            <TextView
                android:id="@+id/profileVisibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Profile visibility"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="start|center_vertical"
                android:drawablePadding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <!-- Home Feed Tuner -->
            <TextView
                android:id="@+id/homeFeedTuner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Home feed tuner"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="start|center_vertical"
                android:drawablePadding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <!-- Social Permissions -->
            <TextView
                android:id="@+id/socialPermissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Social permissions"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="start|center_vertical"
                android:drawablePadding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <!-- Notifications -->
            <TextView
                android:id="@+id/notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Notifications"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="start|center_vertical"
                android:drawablePadding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <!-- Privacy and Data -->
            <TextView
                android:id="@+id/privacyAndData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Privacy and data"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="start|center_vertical"
                android:drawablePadding="12dp"
                android:background="?android:attr/selectableItemBackground"/>

            <!-- Reports and Violations Center -->
            <TextView
                android:id="@+id/reportsAndViolations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Reports and violations center"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="start|center_vertical"
                android:drawablePadding="12dp"
                android:background="?android:attr/selectableItemBackground"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginTop="16dp"/>

            <!-- Log in -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="Log in"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <!-- Add Account -->
            <TextView
                android:id="@+id/addAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Add account"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="start|center_vertical"
                android:drawablePadding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <!-- Security -->
            <TextView
                android:id="@+id/security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Security"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="start|center_vertical"
                android:drawablePadding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginTop="10dp"/>

            <!-- Log out -->
            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Log out"
                android:textStyle="bold"
                android:textColor="#FF4444"
                android:gravity="start|center_vertical"
                android:drawablePadding="16dp"
                android:background="?android:attr/selectableItemBackground"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>